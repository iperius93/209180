#ifndef PCD8544_H_
#define PCD8544_H_

#define SCE_PORT D
#define RST_PORT D
#define D/C_PORT D
#define SDIN_PORT D
#define SCLK_PORT D

#define SCE 	1
#define RST 	2
#define D/C 	3
#define SDIN 	4
#define SCLK 	5

// Makra upraszczajace dostep do port√≥w
// *** PORT
#define PORT(x) SPORT(x)
#define SPORT(x) (PORT##x)
// *** PIN
#define PIN(x) SPIN(x)
#define SPIN(x) (PIN##x)
// *** DDR
#define DDR(x) SDDR(x)
#define SDDR(x) (DDR##x)


#endif /* PCD8544_H_ */
