#ifndef PCD8544_H_
#define PCD8544_H_

#define SCE PD
#define RST PD
#define D/C PD
#define SDIN PD
#define SCLK PD

// Makra upraszczaj¹ce dostêp do portów
// *** PORT
#define PORT(x) SPORT(x)
#define SPORT(x) (PORT##x)
// *** PIN
#define PIN(x) SPIN(x)
#define SPIN(x) (PIN##x)
// *** DDR
#define DDR(x) SDDR(x)
#define SDDR(x) (DDR##x)


#endif /* PCD8544_H_ */
