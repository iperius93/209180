#ifndef PCD8544_H_
#define PCD8544_H_

#define SCE_PORT D
#define SCE 2

#define RST_PORT D
#define RST 3

#define DC_PORT D
#define DC 6

#define SDIN_PORT D
#define SDIN 5

#define SCLK_PORT D
#define SCLK 4

// Makra upraszczajace dostep do port√≥w
// *** PORT
#define PORT(x) SPORT(x)
#define SPORT(x) (PORT##x)
// *** PIN
#define PIN(x) SPIN(x)
#define SPIN(x) (PIN##x)
// *** DDR
#define DDR(x) SDDR(x)
#define SDDR(x) (DDR##x)


void lcd_init(void);

#endif /* PCD8544_H_ */
